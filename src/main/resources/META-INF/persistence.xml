<?xml version="1.0" encoding="UTF-8"?>
<persistence xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" version="2.1"
             xmlns="http://xmlns.jcp.org/xml/ns/persistence"
             xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/persistence http://xmlns.jcp.org/xml/ns/persistence/persistence_2_1.xsd">
    <!-- DO NOT RENAME THE PERSISTENCE UNIT -->
    <persistence-unit name="sportify" transaction-type="RESOURCE_LOCAL">

        <provider>org.hibernate.jpa.HibernatePersistenceProvider</provider>
        <!--                <class>DL.Users.User</class>-->
        <!--<class>DL.Administration.SystemManager</class>-->
        <!--<class>DL.Administration.AssociationMember</class>-->
        <!--<class>DL.Administration.Financial.TeamFinancialEntry</class>-->
        <!--<class>DL.Administration.Financial.AssociationFinancialEntry</class>-->
        <!--<class>DL.Administration.Financial.FinancialEntry</class>-->
        <exclude-unlisted-classes>true</exclude-unlisted-classes>
        <!--true for db unit test false for deploy-->
        <properties>
            <property name="javax.persistence.jdbc.driver" value="com.mysql.jdbc.Driver"/>
            <!-- The missing values are added by ServerSystem -->
            <property name="javax.persistence.jdbc.user" value="root"/>
            <property name="javax.persistence.jdbc.password" value=""/>
            <property name="hibernate.hbm2ddl.auto" value="create"/>
            <property name="hibernate.dialect" value="org.hibernate.dialect.MySQL57Dialect"/>
        </properties>

        </persistence-unit>
</persistence>